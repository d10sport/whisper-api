FROM python:3.11-slim

# Dependencias del sistema
RUN apt-get update && apt-get install -y \
    build-essential git wget cmake ffmpeg libsndfile1-dev \
    && rm -rf /var/lib/apt/lists/*

# Crear directorio de trabajo
WORKDIR /app

# Clonar whisper.cpp y compilar
RUN git clone --depth 1 https://github.com/ggerganov/whisper.cpp /app/whisper.cpp
WORKDIR /app/whisper.cpp
RUN make -j$(nproc)

# Volver al app root
WORKDIR /app

# Copiar API
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY main.py .

# Crea carpeta models (se montar√° como volume en Dokploy)
RUN mkdir -p /app/models

# Exponer puerto
EXPOSE 9000

# Ejecutar uvicorn
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "9000"]
